<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
   android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:minWidth="25px"
      android:minHeight="25px">

    <TextView
       android:text="Registros: Visualizar"
       android:layout_marginLeft="18dip"
       android:layout_marginTop="18dip"
       android:textAppearance="?android:attr/textAppearanceLarge"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"/>

    <!--Para visualizar os dados de uma entrega ...-->
    <TextView
       android:text="@string/registrosVisualizar_1"
       android:layout_marginLeft="18dip"
       android:layout_marginRight="18dip"
       android:layout_marginTop="10dip"
       android:textAppearance="?android:attr/textAppearanceMedium"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"/>

    <ImageView
       android:layout_marginTop="18dip"
       android:layout_gravity="center_horizontal"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:background="@drawable/VisualizarRegistros"/>

    <!--Não é possível alterar uma entrega já efetuada...-->
    <TextView
       android:text="@string/registrosVisualizar_2"
       android:layout_marginLeft="18dip"
       android:layout_marginRight="18dip"
       android:layout_marginTop="10dip"
       android:textAppearance="?android:attr/textAppearanceMedium"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"/>

    <TextView
       android:text="Registros: Excluir"
       android:layout_marginLeft="18dip"
       android:layout_marginTop="18dip"
       android:textAppearance="?android:attr/textAppearanceLarge"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"/>

    <!--Para visualizar os dados de uma entrega ...-->
    <TextView
       android:text="@string/registrosExcluir"
       android:layout_marginLeft="18dip"
       android:layout_marginRight="18dip"
       android:layout_marginTop="10dip"
       android:textAppearance="?android:attr/textAppearanceMedium"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"/>

    <ImageView
       android:layout_marginTop="18dip"
       android:layout_gravity="center_horizontal"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:background="@drawable/ExcluirRegistros"/>
    
  </LinearLayout>
</ScrollView>