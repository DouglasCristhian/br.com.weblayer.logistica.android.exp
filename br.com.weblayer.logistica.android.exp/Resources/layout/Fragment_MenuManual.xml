<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:minWidth="25px"
      android:minHeight="25px">
    
    <TextView
       android:text="@string/instrucao_manual"
       android:layout_marginLeft="18dip"
       android:layout_marginRight="18dip"
       android:layout_marginTop="15dip"
       android:textAppearance="?android:attr/textAppearanceMedium"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"/>

    <TextView
      android:text="•Introdução"
      android:layout_gravity="center_horizontal"
      android:layout_marginTop="60dip"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:textColor="#000"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:onClick="IntroduçãoClick"/>

    <TextView
      android:text="•Utilizando o Aplicativo"
      android:layout_gravity="center_horizontal"
      android:layout_marginTop="10dip"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:textColor="#000"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:onClick="UtilizandoAppClick"/>
    
    <TextView
      android:text="•Permissões"
      android:layout_gravity="center_horizontal"
      android:layout_marginTop="10dip"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:textColor="#000"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:onClick="PermissoesClick"/>


    <TextView
      android:text="•Enviar dados via E-mail"
      android:layout_gravity="center_horizontal"
      android:layout_marginTop="10dip"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:textColor="#000"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:onClick="EnviarEmailClick"/>

    <TextView
      android:text="•Visualizar Registros"
      android:layout_gravity="center_horizontal"
      android:layout_marginTop="10dip"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:textColor="#000"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:onClick="RegistrosClick"/>

    <TextView
      android:text="•Deletar Registros"
      android:layout_gravity="center_horizontal"
      android:layout_marginTop="10dip"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:textColor="#000"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:onClick="DeletarRegistrosClick"/>

  </LinearLayout>
</ScrollView>